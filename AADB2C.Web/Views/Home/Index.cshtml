@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>Welcome to the Azure AD B2C Sample Application</h3>
    <a asp-controller="Home" asp-action="CallAPI" class="btn btn-lg btn-primary">Call API</a>
</div>

@if (ViewBag.Claims != null)
{
    <div>
        <table class="table table-striped table-bordered">
            <tr>
                <th>Claim Type</th>
                <th>Claim Value</th>
            </tr>
            @foreach (System.Security.Claims.Claim claim in ViewBag.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </table>
    </div>
}
